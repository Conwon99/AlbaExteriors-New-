<!doctype html>
<html lang="en" class="overflow-x-hidden">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Favicon and Icons -->
    <link rel="icon" type="image/png" href="/alba-logo.png" />
    <link rel="apple-touch-icon" href="/alba-logo.png" />
    
    <meta name="generator" content={Astro.generator} />
    <link rel="canonical" href={canonical} />
    <title>{title}</title>
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={fullUrl.toString()} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:site_name" content="Alba Exteriors" />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={fullUrl.toString()} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-C39RC6DXXL"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-C39RC6DXXL');
    </script>
    <script type="application/ld+json" set:html={JSON.stringify(organizationSchema)} />
    <script type="application/ld+json" set:html={JSON.stringify(schema)} />
    {breadcrumbSchema && <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />}
    {localBusinessSchema && <script type="application/ld+json" set:html={JSON.stringify(localBusinessSchema)} />}
    <!-- Global phone tracking script -->
    <script is:inline>
      (function() {
        if (typeof window !== 'undefined') {
          function updatePhoneNumbers() {
            const links = document.querySelectorAll('.phone-link[data-tracking-href]');
            links.forEach(function(link) {
              link.href = link.dataset.trackingHref;
              const numberSpan = link.querySelector('.phone-number');
              if (numberSpan) {
                numberSpan.textContent = link.dataset.trackingDisplay;
              } else if (link.textContent && link.dataset.trackingDisplay) {
                // For links without a separate number span (like thank-you page)
                link.textContent = link.dataset.trackingDisplay;
              }
            });
          }
          if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', updatePhoneNumbers);
          } else {
            updatePhoneNumbers();
          }
        }
      })();
    </script>
    <style>
      * {
        max-width: 100%;
      }
      html, body {
        overflow-x: hidden;
        width: 100%;
      }
    </style>
  </head>
  <body class="text-black text-sm not-italic normal-nums font-normal accent-auto bg-zinc-100 box-border caret-transparent block tracking-[normal] leading-[20.3px] list-outside list-disc break-words overflow-x-hidden overflow-y-auto pointer-events-auto text-start indent-[0px] normal-case visible border-separate font-figtree md:text-[17px] md:leading-[24.65px]">
    <Header client:load />
    <main>
      <slot />
    </main>
    <Footer client:load />
    <CallButton client:load />
  </body>
</html>


